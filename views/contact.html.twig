<html>
<head>
  <title>YOU HAVE BEEN NOWHERE</title>
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
</head>
<body>
  <div class="container">
    <h1>List of Contacts</h1>
    {% if contacts is not empty %}
    <p>Here are all your contacts:</p>
    <ul>
        {% for contact in contacts %}
          <li>{{ contact.getUserName }}</li></br>
          <p>{{ contact.getNumber }}</p>
          <p>{{ contact.getAddress}}
        {% endfor %}
          </ul>
        {% endif %}

    <form action='/create_contact' method='post'>
      <div class="form-group">
        <label for='user_name'>Contact Name</label>
        <input id='user_name' name='user_name' type='text'></br>
        <label for='number'>Phone Number</label>
        <input id='number' name='number' type='text'></br>
        <label for='address'>Enter Address</label>
        <input id='address' name='address' type='text'>
      </div>

      <button type='submit' class="btn-success">Add Contact</button>
    </form>
    <form action='/delete_places' method='post'>
      <button type='submit' class="btn-danger">delete</button>
    </form>
  </div>
</body>
</html>
